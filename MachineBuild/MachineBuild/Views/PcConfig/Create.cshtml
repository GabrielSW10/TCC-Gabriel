<div>
    @Html.ActionLink("Voltar", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#ProcessadorID").change(function () {
            $.get("/PcConfig/GetPlacaMaeList", { ProcessadorID: $("#ProcessadorID").val() }, function (data) {
                $("#PlacaMaeID").empty();
                $.each(data, function (index, row) {
                    $("#PlacaMaeID").append("<option value='" + row.PlacaMaeID + "'>" + row.PlacaMae.Nome + "</option>")
                });
            });        
        })
    });
</script>

<script>
    $(document).ready(function () {
        $("#PlacaVideoID").change(function ()  {
            $.get("/PcConfig/GetFonteList", { ProcessadorID: $("#ProcessadorID").val(), PlacaVideoID: $("#PlacaVideoID").val(), PlacaMaeID: $("#PlacaMaeID").val() }, function (data) {
                $("#FonteID").empty();
                $.each(data, function (index, row) {
                    $("#FonteID").append("<option value='" + row.Id + "'>" + row.Nome + "</option>")
                });
            });
        })
    });
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
