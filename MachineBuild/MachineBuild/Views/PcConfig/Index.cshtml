@model IEnumerable<MachineBuild.Models.PcConfig>

@{
    ViewBag.Title = "PC Configs";
}

<h2>PC Configs</h2>

<p>
    @Html.ActionLink("Criar nova configuração", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Processador")
        </th>
        <th>
            @Html.DisplayName("Placa Mãe")
        </th>
        <th>
            @Html.DisplayName("Placa de Vídeo")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Processador.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacaMae.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacaVideo.Nome)
        </td>  
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
