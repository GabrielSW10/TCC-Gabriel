                @Html.DropDownListFor(model => model.PlacaMaeID, null, "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PlacaMaeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
