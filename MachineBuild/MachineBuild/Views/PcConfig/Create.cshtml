                @Html.DropDownListFor(model => model.ProcessadorID, null, "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProcessadorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
