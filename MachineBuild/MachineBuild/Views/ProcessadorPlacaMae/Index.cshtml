@model IEnumerable<MachineBuild.Models.Pecas.ProcessadorPlacaMae>

@{
    ViewBag.Title = "Compatiibilidade";
}

<h2>Compatibilidade</h2>

<p>
    @Html.ActionLink("Cadastrar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Placa Mãe")
        </th>
        <th>
            @Html.DisplayName("Processador")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlacaMae.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Processador.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
