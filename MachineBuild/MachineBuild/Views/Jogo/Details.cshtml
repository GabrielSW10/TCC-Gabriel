@model MachineBuild.Models.Jogo

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

<div>
    <h4>Jogo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Configuração")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PcConfig.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Desenvolvedora)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Desenvolvedora)
        </dd>

        <dt>
            @Html.DisplayName("Capa")
        </dt>

        <dd>
            @{
                var base64 = Convert.ToBase64String(Model.ImageByte);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgsrc" style="max-width:100px;max-height:100px" />
        </dd>
            
        <dt>
            @Html.DisplayName("Nota Placa de Vídeo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlacaVideoNota)
        </dd>

        <dt>
            @Html.DisplayName("Nota Processador")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProcessadorNota)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar", "Index")
</p>